<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_egg_where"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ruiqin.androidjingtong.activity.EggWhereActivity">



    <LinearLayout
        android:id="@+id/ll_shoe"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_shoe0"
            android:src="@mipmap/shoe_default"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_shoe1"
            android:src="@mipmap/shoe_default"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_shoe2"
            android:src="@mipmap/shoe_default"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_message"
        android:layout_marginBottom="100dp"
        android:layout_above="@id/ll_shoe"
        android:gravity="center"
        android:textSize="18sp"
        android:text="猜猜鸡蛋在哪里鞋子里"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_again"
        android:text="在玩一次"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ll_shoe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
